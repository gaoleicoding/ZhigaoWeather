<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background_sunny_day"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp">


                <ImageView
                    android:id="@+id/iv_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_menu_white" />

                <TextView
                    android:id="@+id/tv_position"
                    style="@style/common_txt_12sp"
                    android:layout_centerHorizontal="true"
                    android:drawableLeft="@drawable/ic_edit_location_white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_date"
                    style="@style/common_txt_12sp"
                    android:layout_below="@id/tv_position"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="12dp"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_temperature"
                    style="@style/common_txt_12sp"
                    android:layout_below="@id/tv_date"
                    android:layout_centerHorizontal="true"
                    android:includeFontPadding="false"
                    android:layout_marginTop="30dp"
                    android:text="1"
                    android:textSize="60sp" />

                <TextView
                    style="@style/common_txt_12sp"
                    android:layout_below="@id/tv_date"
                    android:layout_marginTop="30dp"
                    android:layout_toRightOf="@id/tv_temperature"
                    android:layout_marginLeft="0dp"
                    android:text=" ℃"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_weather"
                    style="@style/common_txt_12sp"
                    android:layout_alignBottom="@id/tv_temperature"
                    android:layout_toRightOf="@id/tv_temperature"
                    android:text="晴"
                    android:textSize="14sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="#33000000"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/weather_broadcast"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <View style="@style/horizontal_divider" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/broadcast_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    />
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>